{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "composite": true,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@postmodernismBot/*": [
        "packages/*/src"
      ]
    },
    "rootDirs": [],
    "typeRoots": [],
    "types": []
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
