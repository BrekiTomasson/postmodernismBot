{
  "extends": "../tsconfig.settings.json",
  "compilerOptions": {
    "compileOnSave": true,
    "outDir": "dist",
    "rootDir": "src",
    "target": "es2017",
    "lib": [
      "es2017"
    ],
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "composite": true,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "typeRoots": [],
    "types": []
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
